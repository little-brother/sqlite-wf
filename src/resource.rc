LANGUAGE 0, SUBLANG_NEUTRAL
IDD_WORKFLOW_ADDEDIT DIALOGEX 50, 50, 230, 220
	STYLE WS_OVERLAPPED | WS_CAPTION | WS_SYSMENU | WS_CLIPCHILDREN
	CAPTION "New workflow"
	FONT 8, "MS Shell Dlg", 400, 0, 0x1
BEGIN
	LTEXT "Name", IDC_DLG_LABEL, 5, 7, 30, 14, SS_LEFT
	EDITTEXT IDC_DLG_WORKFLOW_NAME, 40, 5, 185, 12, WS_BORDER | WS_TABSTOP

	LTEXT "Category", IDC_DLG_LABEL, 5, 24, 30, 14, SS_LEFT
	COMBOBOX  IDC_DLG_WORKFLOW_CATEGORY, 40, 22, 185, 120, WS_TABSTOP | WS_VSCROLL | CBS_DROPDOWN | CBS_HASSTRINGS

	LTEXT "Description", IDC_DLG_LABEL, 5, 44, 100, 10, SS_LEFT
	CONTROL "",IDC_DLG_WORKFLOW_DESC, "RICHEDIT50W",
		WS_VISIBLE | ES_MULTILINE | ES_AUTOVSCROLL | ES_AUTOHSCROLL | ES_WANTRETURN | WS_VSCROLL | WS_HSCROLL | WS_TABSTOP | ES_NOHIDESEL,
		5, 56, 220, 55, WS_EX_STATICEDGE

	LTEXT "Execute on error", IDC_DLG_LABEL, 5, 120, 100, 10, SS_LEFT
	CONTROL "", IDC_DLG_WORKFLOW_ONERROR, "RICHEDIT50W",
		ES_MULTILINE | ES_AUTOVSCROLL | ES_AUTOHSCROLL | ES_WANTRETURN | WS_VSCROLL | WS_HSCROLL | WS_TABSTOP | ES_NOHIDESEL,
		5, 132, 220, 55, WS_EX_STATICEDGE

	LTEXT "ID: ", IDC_DLG_LABEL, 5, 204, 10, 10, SS_LEFT
	EDITTEXT IDC_DLG_WORKFLOW_ID, 17, 204, 40, 14, WS_TABSTOP | ES_READONLY | NOT WS_BORDER

	PUSHBUTTON "OK", IDC_DLG_OK, 100, 201, 60, 14, WS_TABSTOP
	PUSHBUTTON "Cancel", IDC_DLG_CANCEL, 165, 201, 60, 14, WS_TABSTOP
END

